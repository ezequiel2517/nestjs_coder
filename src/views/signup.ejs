<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
</head>

<body>
    <div class="d-flex row m-3">
        <h2 class="my-3 text-center">REGISTRO</h2>
        <form class="container w-50" method="post" enctype="multipart/form-data">
            <label for="username" class="form-label mb-3"> Usuario </label>
            <input type="text" class="form-control mb-3" name="username" required="required">
            <label for="password" class="form-label"> Contrase√±a </label>
            <input type="password" class="form-control mb-3" name="password" required="required">
            <label for="nombre" class="form-label mb-3"> Nombre </label>
            <input type="text" class="form-control mb-3" name="nombre" required="required">
            <label for="direccion" class="form-label mb-3"> Direccion </label>
            <input type="text" class="form-control mb-3" name="direccion" required="required">
            <label for="edad" class="form-label mb-3"> Edad </label>
            <input type="number" min="0" class="form-control mb-3" name="edad" required="required">
            <label for="phone" class="form-label mb-3"> Celular </label>
            <div class="mb-3">
                <input id="phone" type="tel" class="form-control " name="phone" />
            </div>
            <label for="image" class="form-label mb-3"> Foto de perfil </label>
            <input type="file" class="form-control mb-3" name="image" required="required">
            <button type="submit" class="btn btn-primary mb-3" id="enviar"> Enviar </button>
        </form>
        <hr>
        <div class="d-flex row justify-content-end">
            <a class="btn btn-danger w-auto" href="/login">LOGIN</a>
        </div>
    </div>
</body>

<script>
    const phoneInputField = document.querySelector("#phone");
    const phoneInput = window.intlTelInput(phoneInputField, {
        utilsScript:
            "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
    });


    const edad = document.querySelector("#enviar");
    edad.addEventListener("click", () => {
        const cel = document.getElementsByName("phone")[0];
        cel.value = phoneInput.getNumber();
    });

</script>

</html>
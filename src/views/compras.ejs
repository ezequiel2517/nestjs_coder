<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Info</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
  <h1 class="my-3 text-center">CARRITO</h1>
  <div class="d-flex justify-content-end row mx-4">
    <a class="btn btn-danger w-auto" href="/home">HOME</a>
  </div>
  <hr>
  <table class="table mt-3 w-50 margin-auto" style="margin: auto;">
    <thead>
      <tr>
        <th> Title </th>
        <th> Price </th>
      </tr>
    <tbody id="productos">
      <% for(var i=0; i < productos.length; i++) { %>
        <tr>
          <td>
            <%= productos[i].title %>
          </td>
          <td>
            $<%= productos[i].price %>
          </td>
        </tr>
        <% } %>
    </tbody>
    </thead>
  </table>
  <div class="my-3 d-flex justify-content-center w-100">
    <button class="btn btn-success" id="comprar">FINALIZAR COMPRA</button>
  </div>
</body>

<script>
  const buttonComprar = document.querySelector("#comprar");
  buttonComprar.addEventListener("click", (event) => {
    fetch("/carrito", {
      method: "POST",
      headers: {
        "Content-type": "application/json; charset=UTF-8"
      }
    })
      .then((response) => response.json())
      .then((json) => {
        const button = event.target;
        button.classList.remove("btn-success");
        button.classList.add("btn-secondary");
        button.innerText = "REVISAR NOTIFICACIÃ“N";
      });
  })
</script>

</html>